<h1>Eat Da Burger or Burgers by Bob!</h1>



<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h2>Burgers of the Day - To Be Eaten!</h2>            

            {{#each burgers}}
                {{#unless this.devoured}}
                    <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="true">
                    {{this.burger_name}}<button type="submit">Devour Me!</button>
                    </form>
                
                {{/unless}}
            {{/each}}

        </div>
        <div class="col-sm-6">
            <h2>Burgers of the Day - Already Eaten!</h2>

            {{#each burgers}}
                {{#if this.devoured}}

                    {{this.burger_name}}
                    <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="false">
                    </form>

                {{/if}}
            {{/each}}

        </div>  <!-- col -->
    </div>
        <h2>Add a Burger</h2>
        <form class="create-update-form" action="/" method="POST">

            <div class="form-group">
                <label for="bu">Burger Name:</label>
                <input type="text" id="bu" name="burger_name">
            </div>

            <div class="form-group">
                <label for="devour">Devoured?</label><br>
                <input type="radio" name="devoured" value="1" checked> Devoured Already!<br>
                <input type="radio" name="devoured" value="0"> Ready to be devoured
            </div>

            <button type="submit">Add Burger</button>
        </form>        

</div>

